{% trans_default_domain 'FOSUserBundle' %}
{% trans_default_domain 'SogedialSiteBundle' %}

<div class="login-box">
    <div class="login-logo">
        <a href="#"><b>Admin</b>LTE</a>
    </div>
    <div class="login-box-body">
        <p class="login-box-msg">Changement de mot de passe</p>

        <form action="{{ path('fos_user_change_password') }}" {{ form_start(form) }} method="POST" class="form-login">
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="{{ 'form.current_password'|trans }}" id="form_current_password" name="current_password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="{{ 'form.new_password'|trans }}" id="form_plainPassword_first" name="plainPassword">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="{{ 'form.new_password_confirmation'|trans }}" id="form_plainPassword_first" name="plainPassword">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-2">
                </div>
                <div class="col-xs-10 text-center">
                    <button type="submit" class="btn btn-primary btn-block btn-flat" id="submit"
                            name="submit">{{ 'change_password.submit'|trans }}</button>
                </div>
            </div>
        </form>

        <div class="social-auth-links text-center"></div><!-- /.social-auth-links -->
        <a href="{{ path('SogedialSite_catalogue_integration') }}">Retourner Ã  la page d'accueil</a><br>
        <a href="#" class="text-center">{{ 'security.login.askaccess'|trans }}</a>
    </div>
</div>