{% if codeSociete is defined and codeSociete == '401' %}
    {% set template = 'SogedialIntegrationBundle:Admin:ajouter-prospect-template-tmp-sge.html.twig' %}
{% else %}
    {% set template = 'SogedialIntegrationBundle:Admin:ajouter-prospect-template.html.twig' %}
{% endif %}

{% extends template %}

{% block form %}
    {% spaceless %}
        <div class="scrollable-content">
            <form method="POST" {{ form_enctype(form) }} role="form" class="material-form">
                {{ form_errors(form) }}

                {# Bloc Client #}
                <div class="grid-s-12 grid-m-4">
                    <div class="material-well">
                        <div class="form-block-title grid-padded">
                            Informations générales
                        </div>
                        <div class="material-form-container grid-s-12 grid-padded">
                            <div class="form-input">
                                {{ form_widget(form.nom) }}
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                {{ form_label(form.nom) }}
                            </div>
                        </div>
                        <div class="material-form-container grid-s-12 grid-padded">
                            <div class="form-input">
                                {{ form_widget(form.responsable1) }}
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                {{ form_label(form.responsable1) }}
                            </div>
                        </div>
                        <div class="material-form-container grid-s-12 grid-padded">
                            <div class="form-input">
                                {{ form_widget(form.responsable2) }}
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                {{ form_label(form.responsable2) }}
                            </div>
                        </div>
                    </div>
                </div>
                
                {# Bloc adresse #}
                <div class="grid-s-12 grid-m-8">
                    <div class="material-well">
                        <div class="form-block-title grid-padded">
                            Adresse du prospect
                        </div>
                        <div class="material-form-container grid-s-12 grid-padded">
                            <div class="form-input">
                                {{ form_widget(form.adresse1) }}
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                {{ form_label(form.adresse1) }}
                            </div>
                        </div>
                        <div class="material-form-container grid-s-12 grid-padded">
                            <div class="form-input">
                                {{ form_widget(form.adresse2) }}
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                {{ form_label(form.adresse2) }}
                            </div>
                        </div>
                        <div class="material-form-container grid-s-4 grid-m-3 grid-padded">
                            <div class="form-input input-text-number">
                                {{ form_widget(form.codePostale) }}
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                {{ form_label(form.codePostale) }}
                            </div>
                        </div>
                        <div class="material-form-container grid-s-8 grid-m-5 grid-padded">
                            <div class="form-input">
                                {{ form_widget(form.ville) }}
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                {{ form_label(form.ville) }}
                            </div>
                        </div>
                        <div class="material-form-container grid-s-12 grid-m-4 grid-padded">
                            <div class="form-input">
                                {{ form_widget(form.pays) }}
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                {{ form_label(form.pays) }}
                            </div>
                        </div>
                    </div>
                </div>

                {# Bloc contact #}
                <div class="grid-s-12 grid-m-5 grid-xl-6">
                    <div class="material-well">
                        <div class="form-block-title grid-padded">
                            Contact
                        </div>
                        <div class="material-form-container grid-s-6 grid-padded">
                            <div class="form-input input-text-number">
                                {{ form_widget(form.telephone) }}
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                {{ form_label(form.telephone) }}
                            </div>
                        </div>
                        <div class="material-form-container grid-s-6 grid-padded">
                            <div class="form-input input-text-number">
                                {{ form_widget(form.fax) }}
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                {{ form_label(form.fax) }}
                            </div>
                        </div>
                        <div class="material-form-container grid-s-12 grid-padded">
                            <div class="form-input">
                                {{ form_widget(form.email) }}
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                {{ form_label(form.email) }}
                            </div>
                        </div>
                    </div>
                </div>

                {# Bloc Offre #}
                <div class="grid-s-12 grid-m-7 grid-xl-6">
                    <div class="material-well">
                        <div class="form-block-title grid-padded">
                            Offre commerciale
                        </div>
                        {% if tarification %}
                            <div class="material-form-container grid-s-12 grid-m-6 grid-padded">
                                <div class="form-input">
                                    {{ form_widget(form.tarification) }}
                                    <span class="highlight"></span>
                                    <span class="bar"></span>
                                    {{ form_label(form.tarification) }}
                                </div>
                            </div>
                        {% else %}
                            <div class="material-form-container grid-s-12 grid-m-6 grid-padded">
                                <div class="form-select">
                                    {{ form_label(form.enseigne) }}
                                    <div class="select-container">
                                        {{ form_widget(form.enseigne) }}
                                    </div>
                                    <span class="highlight"></span>
                                    <span class="bar"></span>
                                </div>
                            </div>
                        {% endif %}
                        <div class="material-form-container grid-s-12 grid-m-6 grid-padded">
                            <div class="form-select">
                                {{ form_label(form.typologieClient)}}
                                <div class="select-container">
                                    {{ form_widget(form.typologieClient) }}
                                </div>
                                <span class="highlight"></span>
                                <span class="bar"></span>
                            </div>
                        </div>
                        <div class="material-form-container grid-s-12 grid-padded">
                            <div class="form-textarea">
                                {{ form_widget(form.commentaireProspect) }}
                                <span class="highlight"></span>
                                <span class="bar"></span>    
                                {{ form_label(form.commentaireProspect) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="grid-s-12">
                {# Bouton sauvegarde #}
                    <div class="grid-row grid-center">
                        <button type="submit" class="button blue marg-v-20" id="_submit"><i class="fa fa-save"></i> SAUVEGARDER</button>
                    </div>
                </div>
                {{ form_widget(form._token) }}
            </form>
        </div>
    {% endspaceless %}

    {% javascripts '@SogedialIntegrationBundle/Resources/public/js/formFrontManager.js' %}
        <script src="{{ asset('https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

